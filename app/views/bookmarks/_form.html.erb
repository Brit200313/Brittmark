<%= form_for [bookmark], html: { class: 'form-horizontal' } do |f| %>
  <% if bookmark.errors.any? %>
    <div class="alert alert-block", , style="float: left;">
      <h4>There are <%= pluralize(bookmark.errors.count, "error") %>.</h4>
      <ul>
        <% bookmark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= control_group_tag(bookmark.errors[:title]) do %>
    <%= f.label :title, class: 'control-label' %>
    <div class="controls", style="float: left;">
      <%= f.text_field :title %>
    </div>
  <% end %>
  <%= control_group_tag(bookmark.errors[:burl]) do %>
    <%= f.label :burl, class: 'control-label' %>
    <div class="controls", style="float: left;">
      <%= f.text_area :burl, rows: 8 %>
    </div>
  <% end %>
  <div class="controls", style="float: left;">
    <!-- input name="tags" id="tags" value="foo,bar,baz" /> --> 
    <%= f.label :tag_list, "Hashtags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="control-group", style="float: left;">
    <div class="controls">
      <%= f.submit "Save", class: 'btn' %>
    </div>
  </div>
<% end %>